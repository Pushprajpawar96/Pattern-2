import java.util.Scanner;
public class Solution {
	public static void main(String[] args) {
		
		Scanner s = new Scanner(System.in);
		int i,n;
		n=s.nextInt();
		i=1;
		while(i <= n) {
			int spaces=1;
			while(spaces <= n-i){
			System.out.print(" ");
			spaces= spaces + 1;
			}
		    int start=1;
			while(start<=i) {
				System.out.print(start);
				start= start + 1;
		}

			System.out.println();
			i= i + 1;
		}

		
	}

}
